        <module>lib</module>
        <module>cmdline</module>
    </modules>

    <developers>
        <developer>
            <id>ebour</id>
            <email>eddy.bour@gmail.com</email>
        </developer>
    </developers>

    <inceptionYear>2015</inceptionYear>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
